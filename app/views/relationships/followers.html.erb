<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Follower Users</h1>
      <table class="table">
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>

        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image, size:"50x50" %></td>
            <td><%= user.name %></td>
            <td>フォロー数: <%= user.followings.count %></td>
            <td>フォロワー数: <%= user.followers.count %></td>
            <td><%= link_to 'show', user_path(user.id) %></td>
          </tr>
        <% end %>

      </table>
    </div>

  </div>
</div>